doctype html
html(lang='en')
  include common/head.pug
  +head(title)
  body.antialiased.bg-body.text-body.font-body
    div
      include common/navbar.pug
      +navbar()
      section.min-h-screen.py-10.bg-gray-800
        .container.mx-auto.px-4
          .max-w-xl.mx-auto
            .mb-10
              a.text-white.text-3xl.font-bold.leading-none(href='#')
                img.h-12.mx-auto(src=asset('atis-assets/logo/atis/atis-mono-light.svg') alt width='auto')
            .mb-6.lg_mb-10.p-6.lg_p-12.bg-gray-900.shadow-md.rounded
              .mb-6
                span.text-gray-500 Sign In
                h3.text-2xl.font-bold.text-white Join our community
              form(action="/login", method="post")
                .mb-3.flex.p-4.bg-gray-800.rounded
                  input.w-full.text-xs.text-gray-50.bg-gray-800.outline-none(name="email", type='email', placeholder='name@email.com', autocomplete='off', style='background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;')
                  svg.h-6.w-6.ml-4.my-auto.text-gray-300(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207')
                .mb-6.flex.p-4.bg-gray-800.rounded
                  input.w-full.text-xs.text-gray-50.bg-gray-800.outline-none(name="password", type='password', placeholder='Enter your password', autocomplete='off', style='background-image: url("data:image/png;base64,"); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%;')
                  button(type="submit")
                    svg.h-6.w-6.ml-4.my-auto.text-gray-300(xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 12a3 3 0 11-6 0 3 3 0 016 0z')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z')
                .text-center
                  button.mb-4.w-full.py-4.bg-green-600.hover_bg-green-700.rounded.text-sm.font-bold.text-gray-50 Sign In
                  a.text-xs.text-green-600.hover_underline(href='/user/reset-password-email') Forgot password?
                  if (facebook_callback)
                    a.mt-8.mb-4.p-4.flex.justify-center.items-center.border.rounded.hover_bg-gray-800(href='#')
                      img.mr-4(src=asset('atis-assets/social/facebook-logo.png') alt)
                      span.text-xs.text-gray-500.font-bold Sign In with Facebook
                  if (google_callback)
                    a.p-4.mb-4.flex.justify-center.items-center.border.rounded.hover_bg-gray-800(href='#')
                      img.mr-4(src=asset('atis-assets/social/google-logo.png') alt)
                      span.text-xs.text-gray-500.font-bold Sign In with Google
                  if (twitter_callback)
                    a.p-4.flex.justify-center.items-center.border.rounded.hover_bg-gray-800(href='#')
                      img.mr-4(src=asset('atis-assets/social/twitter-logo.png') alt)
                      span.text-xs.text-gray-500.font-bold Sign In with Twitter
                if flash_message[0]
                  .text-center
                    span #{flash_message[0]}
                if flash_message[1]
                  .text-center
                    span #{flash_message[1]}
      include common/footer-simple.pug
      +footer_simple()