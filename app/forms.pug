doctype html
html(lang='en')
  include common/head.pug
  +head(title)
  body.bg-gray-100.font-family-karla.flex
    include common/sidebar.pug
    +sidebar()
    .relative.w-full.flex.flex-col.h-screen.overflow-y-hidden
      include common/header.pug
      +header()
      .w-full.h-screen.overflow-x-hidden.border-t.flex.flex-col
        main.w-full.flex-grow.p-6
          h1.w-full.text-3xl.text-black.pb-6 Forms
          .flex.flex-wrap
            .w-full.lg_w-1_2.my-6.pr-0.lg_pr-2
              p.text-xl.pb-6.flex.items-center
                i.fas.fa-list.mr-3
                | Contact Form
              .leading-loose
                form.p-10.bg-white.rounded.shadow-xl
                  div
                    label.block.text-sm.text-gray-600(for='name') Name
                    input.w-full.px-5.py-1.text-gray-700.bg-gray-200.rounded#name(name='name' type='text' required placeholder='Your Name' aria-label='Name')
                  .mt-2
                    label.block.text-sm.text-gray-600(for='email') Email
                    input.w-full.px-5.py-4.text-gray-700.bg-gray-200.rounded#email(name='email' type='text' required placeholder='Your Email' aria-label='Email')
                  .mt-2
                    label.block.text-sm.text-gray-600(for='message') Message
                    textarea.w-full.px-5.py-2.text-gray-700.bg-gray-200.rounded#message(name='message' rows='6' required placeholder='Your inquiry..' aria-label='Email')
                  .mt-6
                    button.px-4.py-1.text-white.font-light.tracking-wider.bg-gray-900.rounded(type='submit') Submit
            .w-full.lg_w-1_2.mt-6.pl-0.lg_pl-2
              p.text-xl.pb-6.flex.items-center
                i.fas.fa-list.mr-3
                |  Checkout Form
              .leading-loose
                form.p-10.bg-white.rounded.shadow-xl
                  p.text-lg.text-gray-800.font-medium.pb-4 Customer information
                  div
                    label.block.text-sm.text-gray-600(for='cus_name') Name
                    input.w-full.px-5.py-1.text-gray-700.bg-gray-200.rounded#cus_name(name='cus_name' type='text' required placeholder='Your Name' aria-label='Name')
                  .mt-2
                    label.block.text-sm.text-gray-600(for='cus_email') Email
                    input.w-full.px-5.py-4.text-gray-700.bg-gray-200.rounded#cus_email(name='cus_email' type='text' required placeholder='Your Email' aria-label='Email')
                  .mt-2
                    label.block.text-sm.text-gray-600(for='cus_email') Address
                    input.w-full.px-2.py-2.text-gray-700.bg-gray-200.rounded#cus_email(name='cus_email' type='text' required placeholder='Street' aria-label='Email')
                  .mt-2
                    label.hidden.text-sm.block.text-gray-600(for='cus_email') City
                    input.w-full.px-2.py-2.text-gray-700.bg-gray-200.rounded#cus_email(name='cus_email' type='text' required placeholder='City' aria-label='Email')
                  .inline-block.mt-2.w-1_2.pr-1
                    label.hidden.block.text-sm.text-gray-600(for='cus_email') Country
                    input.w-full.px-2.py-2.text-gray-700.bg-gray-200.rounded#cus_email(name='cus_email' type='text' required placeholder='Country' aria-label='Email')
                  .inline-block.mt-2.-mx-1.pl-1.w-1_2
                    label.hidden.block.text-sm.text-gray-600(for='cus_email') Zip
                    input.w-full.px-2.py-2.text-gray-700.bg-gray-200.rounded#cus_email(name='cus_email' type='text' required placeholder='Zip' aria-label='Email')
                  p.text-lg.text-gray-800.font-medium.py-4 Payment information
                  div
                    label.block.text-sm.text-gray-600(for='cus_name') Card
                    input.w-full.px-2.py-2.text-gray-700.bg-gray-200.rounded#cus_name(name='cus_name' type='text' required placeholder='Card Number MM/YY CVC' aria-label='Name')
                  .mt-6
                    button.px-4.py-1.text-white.font-light.tracking-wider.bg-gray-900.rounded(type='submit') $3.00
              p.pt-6.text-gray-600
                | Source: 
                a.underline(href='https://tailwindcomponents.com/component/checkout-form') https://tailwindcomponents.com/component/checkout-form
        include common/footer.pug
        +footer()
