mixin header()
  .w-full.flex.flex-col.h-screen.overflow-y-hidden
    //  Desktop Header 
    header.w-full.items-center.bg-white.py-2.px-6.hidden.sm_flex
      .w-1_2
      .relative.w-1_2.flex.justify-end(x-data='{ isOpen: false }')
        button.realtive.z-10.w-12.h-12.rounded-full.overflow-hidden.border-4.border-gray-400.hover_border-gray-300.focus_border-gray-300.focus_outline-none(@click='isOpen = !isOpen')
          img(src='https://source.unsplash.com/uJ8LNVCBjFQ/400x400')
        button.h-full.w-full.fixed.inset-0.cursor-default(x-show='isOpen' @click='isOpen = false')
        .absolute.w-32.bg-white.rounded-lg.shadow-lg.py-2.mt-16(x-show='isOpen')
          a.block.px-4.py-2.account-link.hover_text-white(href='#') Account
          a.block.px-4.py-2.account-link.hover_text-white(href='#') Support
          a.block.px-4.py-2.account-link.hover_text-white(href='#') Sign Out
    //  Mobile Header & Nav 
    header.w-full.bg-sidebar.py-5.px-6.sm_hidden(x-data='{ isOpen: false }')
      .flex.items-center.justify-between
        a.text-white.text-3xl.font-semibold.uppercase.hover_text-gray-300(href='index.html') Admin
        button.text-white.text-3xl.focus_outline-none(@click='isOpen = !isOpen')
          i.fas.fa-bars(x-show='!isOpen')
          i.fas.fa-times(x-show='isOpen')
      //  Dropdown Nav 
      nav.flex.flex-col.pt-4(:class='isOpen ? \'flex\': \'hidden\'')
        a.flex.items-center.active-nav-link.text-white.py-2.pl-4.nav-item(href='index.html')
          i.fas.fa-tachometer-alt.mr-3
          | Dashboard

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='blank.html')
          i.fas.fa-sticky-note.mr-3
          | Blank Page

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='tables.html')
          i.fas.fa-table.mr-3
          | Tables

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='forms.html')
          i.fas.fa-align-left.mr-3
          | Forms

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='tabs.html')
          i.fas.fa-tablet-alt.mr-3
          | Tabbed Content

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='calendar.html')
          i.fas.fa-calendar.mr-3
          | Calendar

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='#')
          i.fas.fa-cogs.mr-3
          | Support

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='#')
          i.fas.fa-user.mr-3
          | My Account

        a.flex.items-center.text-white.opacity-75.hover_opacity-100.py-2.pl-4.nav-item(href='#')
          i.fas.fa-sign-out-alt.mr-3
          | Sign Out

        button.w-full.bg-white.cta-btn.font-semibold.py-2.mt-3.rounded-lg.shadow-lg.hover_shadow-xl.hover_bg-gray-300.flex.items-center.justify-center
          i.fas.fa-arrow-circle-up.mr-3
          |  Upgrade to Pro!

      //
         <button class="w-full bg-white cta-btn font-semibold py-2 mt-5 rounded-br-lg rounded-bl-lg rounded-tr-lg shadow-lg hover:shadow-xl hover:bg-gray-300 flex items-center justify-center">
                        <i class="fas fa-plus mr-3"></i> New Report
                    </button> 